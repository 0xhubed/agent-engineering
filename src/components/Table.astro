---
interface Props {
  caption?: string;
  class?: string;
}

const { caption, class: className = '' } = Astro.props;
---

<div class={`table-wrapper overflow-x-auto my-4 border border-newsprint-300 ${className}`}>
  <table class="w-full text-sm">
    {caption && (
      <caption class="px-4 pt-2 pb-1 text-left font-serif text-xs text-ink-muted italic bg-newsprint-100 border-b border-newsprint-200">
        {caption}
      </caption>
    )}
    <slot />
  </table>
</div>

<style>
  .table-wrapper :global(thead) {
    @apply bg-newsprint-100;
  }

  .table-wrapper :global(th) {
    @apply px-4 py-3 text-left font-display font-semibold text-ink text-sm border-b border-ink;
  }

  .table-wrapper :global(td) {
    @apply px-4 py-3 border-b border-newsprint-200 text-ink-light font-serif;
  }

  .table-wrapper :global(tr:last-child td) {
    @apply border-b-0;
  }

  .table-wrapper :global(tbody tr:hover) {
    @apply bg-newsprint-50;
  }
</style>
