---
interface CodeTab {
  language: string;
  label: string;
  code: string;
}

interface Props {
  tabs: CodeTab[];
  title?: string;
}

const { tabs, title } = Astro.props;
const id = `code-${Math.random().toString(36).substring(2, 11)}`;

const languageMap: Record<string, string> = {
  'pseudo': 'plaintext',
  'pseudocode': 'plaintext',
  'python': 'python',
  'py': 'python',
  'csharp': 'csharp',
  'cs': 'csharp',
  'c#': 'csharp',
  'javascript': 'javascript',
  'js': 'javascript',
  'typescript': 'typescript',
  'ts': 'typescript',
  'bash': 'bash',
  'shell': 'bash',
  'json': 'json',
  'yaml': 'yaml',
};
---

<div class="code-block overflow-hidden border border-newsprint-300 my-4">
  {title && (
    <div class="bg-newsprint-100 px-4 py-2 border-b border-newsprint-300">
      <span class="font-serif text-sm text-ink-muted italic">{title}</span>
    </div>
  )}

  <!-- Tabs -->
  <div class="flex border-b border-newsprint-300 bg-newsprint-50">
    {tabs.map((tab, index) => (
      <button
        class="code-tab px-4 py-2 font-serif text-sm transition-colors border-b-2 -mb-px"
        data-tab-id={`${id}-${index}`}
        data-active={index === 0 ? 'true' : 'false'}
      >
        {tab.label}
      </button>
    ))}
  </div>

  <!-- Code Panels -->
  <div class="relative">
    {tabs.map((tab, index) => (
      <div
        class="code-panel"
        data-panel-id={`${id}-${index}`}
        data-active={index === 0 ? 'true' : 'false'}
      >
        <div class="relative group">
          <pre class="bg-newsprint-50 p-4 overflow-x-auto text-sm border-0 rounded-none m-0"><code class={`language-${languageMap[tab.language.toLowerCase()] || 'plaintext'}`}>{tab.code}</code></pre>
          <button
            class="copy-btn absolute top-2 right-2 p-2 bg-newsprint-200/80 text-ink-muted opacity-0 group-hover:opacity-100 transition-opacity hover:bg-newsprint-300"
            data-code={tab.code}
            aria-label="Copy code"
          >
            <svg class="w-4 h-4 copy-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
            </svg>
            <svg class="w-4 h-4 check-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
          </button>
        </div>
      </div>
    ))}
  </div>
</div>

<style>
  .code-tab[data-active='true'] {
    @apply text-ink border-ink bg-white;
    font-weight: 500;
  }

  .code-tab[data-active='false'] {
    @apply text-ink-muted border-transparent hover:text-ink-light hover:border-newsprint-400;
  }

  .code-panel[data-active='false'] {
    @apply hidden;
  }

  .code-panel[data-active='true'] {
    @apply block;
  }
</style>

<script>
  document.querySelectorAll('.code-tab').forEach((tab) => {
    tab.addEventListener('click', () => {
      const tabId = tab.getAttribute('data-tab-id');
      if (!tabId) return;
      const prefix = tabId.substring(0, tabId.lastIndexOf('-'));
      document.querySelectorAll(`[data-tab-id^="${prefix}"]`).forEach((t) => {
        t.setAttribute('data-active', 'false');
      });
      tab.setAttribute('data-active', 'true');
      document.querySelectorAll(`[data-panel-id^="${prefix}"]`).forEach((p) => {
        p.setAttribute('data-active', 'false');
      });
      document.querySelector(`[data-panel-id="${tabId}"]`)?.setAttribute('data-active', 'true');
    });
  });

  document.querySelectorAll('.copy-btn').forEach((btn) => {
    btn.addEventListener('click', async () => {
      const code = btn.getAttribute('data-code');
      if (!code) return;
      await navigator.clipboard.writeText(code);
      const copyIcon = btn.querySelector('.copy-icon');
      const checkIcon = btn.querySelector('.check-icon');
      copyIcon?.classList.add('hidden');
      checkIcon?.classList.remove('hidden');
      setTimeout(() => {
        copyIcon?.classList.remove('hidden');
        checkIcon?.classList.add('hidden');
      }, 2000);
    });
  });
</script>
