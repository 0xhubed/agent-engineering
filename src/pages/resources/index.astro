---
import BaseLayout from '../../layouts/BaseLayout.astro';

interface NewsItem {
  title: string;
  url: string;
  summary: string;
  published: string | null;
  source: string;
  category: string;
  tags?: string[];
}

interface NewsData {
  last_updated: string | null;
  items: NewsItem[];
}

import newsDataRaw from '../../data/news.json';
const newsData = newsDataRaw as NewsData;
const news: NewsItem[] = newsData.items || [];
const lastUpdated = newsData.last_updated
  ? new Date(newsData.last_updated).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })
  : null;

const papers = {
  'Foundational': [
    { title: 'ReAct: Synergizing Reasoning and Acting in Language Models', authors: 'Yao et al.', year: 2023, venue: 'ICLR 2023', description: 'Introduces the ReAct paradigm combining reasoning traces with actions.', url: 'https://arxiv.org/abs/2210.03629' },
    { title: 'Toolformer: Language Models Can Teach Themselves to Use Tools', authors: 'Schick et al.', year: 2023, venue: 'NeurIPS 2023', description: 'Demonstrates self-supervised tool use learning in LLMs.', url: 'https://arxiv.org/abs/2302.04761' },
    { title: 'Chain-of-Thought Prompting Elicits Reasoning in Large Language Models', authors: 'Wei et al.', year: 2022, venue: 'NeurIPS 2022', description: 'Foundational work on prompting LLMs for step-by-step reasoning.', url: 'https://arxiv.org/abs/2201.11903' },
    { title: 'Tree of Thoughts: Deliberate Problem Solving with Large Language Models', authors: 'Yao et al.', year: 2023, venue: 'NeurIPS 2023', description: 'Extends CoT with exploration of multiple reasoning paths.', url: 'https://arxiv.org/abs/2305.10601' },
  ],
  'Memory': [
    { title: 'Generative Agents: Interactive Simulacra of Human Behavior', authors: 'Park et al.', year: 2023, venue: 'UIST 2023', description: 'Agents with memory for believable social simulation.', url: 'https://arxiv.org/abs/2304.03442' },
    { title: 'MemGPT: Towards LLMs as Operating Systems', authors: 'Packer et al.', year: 2023, venue: 'arXiv', description: 'Hierarchical memory management for unbounded context.', url: 'https://arxiv.org/abs/2310.08560' },
    { title: 'Reflexion: Language Agents with Verbal Reinforcement Learning', authors: 'Shinn et al.', year: 2023, venue: 'NeurIPS 2023', description: 'Agents that learn from self-reflection and memory.', url: 'https://arxiv.org/abs/2303.11366' },
  ],
  'Multi-Agent': [
    { title: 'AutoGen: Enabling Next-Gen LLM Applications via Multi-Agent Conversation', authors: 'Wu et al.', year: 2023, venue: 'arXiv', description: 'Framework for multi-agent conversation and collaboration.', url: 'https://arxiv.org/abs/2308.08155' },
    { title: 'MetaGPT: Meta Programming for A Multi-Agent Collaborative Framework', authors: 'Hong et al.', year: 2023, venue: 'arXiv', description: 'Role-based multi-agent system for software development.', url: 'https://arxiv.org/abs/2308.00352' },
    { title: 'Encouraging Divergent Thinking in Large Language Models through Multi-Agent Debate', authors: 'Liang et al.', year: 2023, venue: 'arXiv', description: 'Multiple agents debate to improve reasoning quality.', url: 'https://arxiv.org/abs/2305.19118' },
  ],
  'RAG': [
    { title: 'Retrieval-Augmented Generation for Knowledge-Intensive NLP Tasks', authors: 'Lewis et al.', year: 2020, venue: 'NeurIPS 2020', description: 'Original RAG paper combining retrieval with generation.', url: 'https://arxiv.org/abs/2005.11401' },
    { title: 'Self-RAG: Learning to Retrieve, Generate, and Critique through Self-Reflection', authors: 'Asai et al.', year: 2023, venue: 'arXiv', description: 'Agents that decide when and what to retrieve.', url: 'https://arxiv.org/abs/2310.11511' },
    { title: 'Corrective Retrieval Augmented Generation', authors: 'Yan et al.', year: 2024, venue: 'arXiv', description: 'Self-correcting retrieval with web search fallback.', url: 'https://arxiv.org/abs/2401.15884' },
    { title: 'From Local to Global: A Graph RAG Approach to Query-Focused Summarization', authors: 'Edge et al.', year: 2024, venue: 'arXiv', description: 'Knowledge graph-based RAG for complex queries.', url: 'https://arxiv.org/abs/2404.16130' },
  ],
  'Safety': [
    { title: 'Constitutional AI: Harmlessness from AI Feedback', authors: 'Bai et al.', year: 2022, venue: 'arXiv', description: 'Self-supervision for safe AI behavior.', url: 'https://arxiv.org/abs/2212.08073' },
    { title: 'Red Teaming Language Models with Language Models', authors: 'Perez et al.', year: 2022, venue: 'EMNLP 2022', description: 'Automated red teaming for safety evaluation.', url: 'https://arxiv.org/abs/2202.03286' },
  ],
};

const frameworks = [
  { name: 'LangChain', description: 'Framework for LLM-powered applications. Large ecosystem of integrations.', url: 'https://langchain.com', lang: 'Python/JS' },
  { name: 'LangGraph', description: 'Stateful, multi-actor applications with LLMs. Graph-based control flow.', url: 'https://langchain-ai.github.io/langgraph/', lang: 'Python' },
  { name: 'Microsoft Agent Framework', description: 'Unifying AutoGen and Semantic Kernel for multi-agent workflows.', url: 'https://github.com/microsoft/agent-framework', lang: 'Python/C#' },
];

const protocols = [
  { name: 'Model Context Protocol (MCP)', description: "Anthropic's open protocol for connecting AI with tools and data sources.", url: 'https://modelcontextprotocol.io/', org: 'Anthropic' },
  { name: 'Agent2Agent Protocol (A2A)', description: "Google's protocol for agent-to-agent communication and discovery.", url: 'https://google.github.io/A2A/', org: 'Google' },
  { name: 'Universal Commerce Protocol (UCP)', description: 'Open standard for agentic commerce from discovery to purchase.', url: 'https://ucp.dev/latest/', org: 'Google + Shopify' },
];

const evalTools = [
  { name: 'DeepEval', description: 'Open-source evaluation framework for LLMs. Agent-specific metrics.', url: 'https://docs.confident-ai.com/' },
  { name: 'RAGAS', description: 'Evaluation framework for RAG applications. Component-level metrics.', url: 'https://docs.ragas.io/' },
  { name: 'Promptfoo', description: 'CLI tool for testing and evaluating prompts. CI/CD integration.', url: 'https://www.promptfoo.dev/' },
  { name: 'LangSmith', description: 'Platform for debugging, testing, and monitoring LLM applications.', url: 'https://smith.langchain.com/' },
  { name: 'Braintrust', description: 'Enterprise platform for AI product development. Evals and logging.', url: 'https://braintrustdata.com/' },
];
---

<BaseLayout title="Resources">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="font-display font-bold text-ink" style="font-size: clamp(1.75rem, 4vw, 3rem);">
        Resources
      </h1>
      <p class="font-serif italic text-ink-muted mt-2 max-w-2xl mx-auto">
        Curated research papers, frameworks, protocols, and tools for the practitioner.
      </p>
      <hr class="rule-double mt-6" />
    </div>

    <!-- Nav -->
    <nav class="mb-10 flex flex-wrap gap-6">
      {news.length > 0 && <a href="#news" class="font-serif text-sm text-ink-muted hover:text-ink no-underline">Dispatches</a>}
      <a href="#papers" class="font-serif text-sm text-ink-muted hover:text-ink no-underline">Research</a>
      <a href="#frameworks" class="font-serif text-sm text-ink-muted hover:text-ink no-underline">Frameworks</a>
      <a href="#protocols" class="font-serif text-sm text-ink-muted hover:text-ink no-underline">Protocols</a>
      <a href="#evaluation" class="font-serif text-sm text-ink-muted hover:text-ink no-underline">Evaluation</a>
    </nav>

    <!-- News -->
    {news.length > 0 && (
      <section id="news" class="mb-12">
        <div class="flex items-center justify-between mb-5">
          <h2 class="section-label">Latest Dispatches</h2>
          {lastUpdated && (
            <span class="font-serif text-xs text-ink-faint italic">Updated {lastUpdated}</span>
          )}
        </div>
        <div class="space-y-0 divide-y divide-newsprint-200">
          {news.slice(0, 9).map((item) => (
            <div class="py-4">
              <a href={item.url} target="_blank" rel="noopener noreferrer" class="no-underline group">
                <h3 class="font-display font-semibold text-ink text-base mb-1 group-hover:underline">
                  {item.title}
                </h3>
              </a>
              <p class="font-serif text-sm text-ink-muted leading-snug">{item.summary}</p>
              <span class="font-serif text-xs text-ink-faint">{item.source}</span>
              {item.tags && item.tags.length > 0 && (
                <span class="ml-2 tag-chip">{item.tags[0]}</span>
              )}
            </div>
          ))}
        </div>
      </section>
    )}

    <hr class="rule-thin mb-10" />

    <!-- Research Papers -->
    <section id="papers" class="mb-12">
      <h2 class="font-display font-bold text-ink text-xl mb-6">Research Papers</h2>
      {Object.entries(papers).map(([section, items]) => (
        <div class="mb-8">
          <h3 class="section-label mb-3">{section}</h3>
          <div class="space-y-0 divide-y divide-newsprint-100">
            {items.map((paper) => (
              <div class="py-3">
                <div class="flex items-start justify-between gap-4">
                  <div>
                    <a href={paper.url} target="_blank" rel="noopener noreferrer"
                       class="font-display font-semibold text-ink text-sm hover:underline no-underline">
                      {paper.title}
                    </a>
                    <div class="font-serif text-xs text-ink-muted mt-0.5">
                      {paper.authors} Â· {paper.venue}
                    </div>
                    <p class="font-serif text-xs text-ink-muted leading-snug mt-1">{paper.description}</p>
                  </div>
                  <span class="font-serif text-xs text-ink-faint shrink-0">{paper.year}</span>
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </section>

    <hr class="rule-thin mb-10" />

    <!-- Frameworks -->
    <section id="frameworks" class="mb-12">
      <h2 class="font-display font-bold text-ink text-xl mb-6">Frameworks</h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-0 divide-y sm:divide-y-0">
        {frameworks.map((fw, i) => (
          <div class={`py-4 ${i % 2 === 0 ? 'sm:pr-6 sm:border-r border-newsprint-200' : 'sm:pl-6'} ${i >= 2 ? 'border-t border-newsprint-200' : ''}`}>
            <a href={fw.url} target="_blank" rel="noopener noreferrer" class="no-underline group">
              <div class="flex items-center justify-between mb-1">
                <span class="font-display font-semibold text-ink text-sm group-hover:underline">{fw.name}</span>
                <span class="tag-chip">{fw.lang}</span>
              </div>
            </a>
            <p class="font-serif text-xs text-ink-muted leading-snug">{fw.description}</p>
          </div>
        ))}
      </div>
    </section>

    <hr class="rule-thin mb-10" />

    <!-- Protocols -->
    <section id="protocols" class="mb-12">
      <h2 class="font-display font-bold text-ink text-xl mb-6">Protocols</h2>
      <div class="space-y-0 divide-y divide-newsprint-200">
        {protocols.map((p) => (
          <div class="py-4">
            <div class="flex items-start justify-between gap-4">
              <div>
                <a href={p.url} target="_blank" rel="noopener noreferrer" class="no-underline group">
                  <span class="font-display font-semibold text-ink text-sm group-hover:underline">{p.name}</span>
                </a>
                <p class="font-serif text-xs text-ink-muted leading-snug mt-1">{p.description}</p>
              </div>
              <span class="font-serif text-xs text-ink-faint shrink-0 italic">{p.org}</span>
            </div>
          </div>
        ))}
      </div>
    </section>

    <hr class="rule-thin mb-10" />

    <!-- Evaluation -->
    <section id="evaluation" class="mb-12">
      <h2 class="font-display font-bold text-ink text-xl mb-6">Evaluation Tools</h2>
      <div class="space-y-0 divide-y divide-newsprint-200">
        {evalTools.map((tool) => (
          <div class="py-3">
            <a href={tool.url} target="_blank" rel="noopener noreferrer" class="no-underline group">
              <span class="font-display font-semibold text-ink text-sm group-hover:underline">{tool.name}</span>
            </a>
            <p class="font-serif text-xs text-ink-muted leading-snug mt-0.5">{tool.description}</p>
          </div>
        ))}
      </div>
    </section>

  </div>
</BaseLayout>
