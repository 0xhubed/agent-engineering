      <div class="flex flex-wrap gap-4 justify-center">
        <a
          href="/agent-patterns/resources/"
          class="inline-flex items-center px-6 py-3 rounded-lg bg-slate-900 dark:bg-white text-white dark:text-slate-900 font-medium hover:bg-slate-800 dark:hover:bg-slate-100 transition-colors"
        >
