---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  type?: 'website' | 'article';
  keywords?: string[];
  showMasthead?: boolean;
}

const {
  title,
  description = 'The practitioner\'s journal of AI agent architecture, patterns, and engineering.',
  type = 'website',
  keywords = ['AI agents', 'LLM', 'agent engineering', 'tool use', 'ReAct', 'MCP', 'multi-agent systems'],
  showMasthead = false,
} = Astro.props;

const currentPath = Astro.url.pathname;
const canonicalUrl = new URL(currentPath, Astro.site).href;
const base = import.meta.env.BASE_URL;

// Format today's date in newspaper style
const today = new Date();
const dateStr = today.toLocaleDateString('en-US', {
  weekday: 'long',
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

// Escape </script> injection vectors in JSON-LD
function safeJsonLd(obj: object): string {
  return JSON.stringify(obj)
    .replace(/</g, '\\u003c')
    .replace(/>/g, '\\u003e')
    .replace(/&/g, '\\u0026');
}

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "Agent Engineering",
  "description": description,
  "url": Astro.site?.href ?? 'https://agentengineering.dev',
  "author": { "@type": "Person", "name": "Daniel Huber" },
};

const articleSchema = type === 'article' ? {
  "@context": "https://schema.org",
  "@type": "TechArticle",
  "headline": title,
  "description": description,
  "url": canonicalUrl,
  "author": { "@type": "Person", "name": "Daniel Huber" },
  "publisher": { "@type": "Organization", "name": "Agent Engineering" },
  "keywords": keywords.join(", "),
} : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords.join(", ")} />
    <meta name="author" content="Daniel Huber" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph / Social -->
    <meta property="og:type" content={type} />
    <meta property="og:title" content={`${title} | Agent Engineering`} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="Agent Engineering" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={`${title} | Agent Engineering`} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400;1,600&family=EB+Garamond:ital,wght@0,400;0,500;1,400;1,500&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title} | Agent Engineering</title>

    <script is:inline type="application/ld+json" set:html={safeJsonLd(websiteSchema)} />
    {articleSchema && <script is:inline type="application/ld+json" set:html={safeJsonLd(articleSchema)} />}
  </head>
  <body class="min-h-screen flex flex-col">

    <!-- Dateline bar -->
    <div class="border-b border-newsprint-300 bg-newsprint-100">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-1 flex items-center justify-between">
        <span class="font-serif text-xs text-ink-muted italic">danielhuber.dev@proton.me</span>
        <span class="font-serif text-xs text-ink-muted">{dateStr}</span>
      </div>
    </div>

    {showMasthead && (
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 pt-8 pb-4">
        <div class="masthead">
          <div class="masthead-title">Agent Engineering</div>
          <div class="masthead-subtitle">The Practitioner's Journal of AI Agent Engineering</div>
          <div class="masthead-dateline">Vol. I &nbsp;Â·&nbsp; {dateStr}</div>
        </div>
      </div>
    )}

    <!-- Navigation bar -->
    <header class="sticky top-0 z-50 bg-newsprint-50/95 backdrop-blur-sm border-b border-ink">
      <div style="border-top: 1px solid theme('colors.newsprint.400'); margin-bottom: -1px;"></div>
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-11">
          <!-- Logo -->
          <a href={base} class="font-display font-bold text-ink no-underline hover:no-underline text-lg tracking-tight">
            Agent Engineering
          </a>

          <!-- Desktop Navigation -->
          <nav class="hidden md:flex items-center gap-8">
            <a href={`${base}articles/`} class:list={[
              "font-serif text-sm no-underline hover:no-underline transition-colors",
              currentPath.startsWith('/articles') || currentPath.startsWith('/topics')
                ? "text-ink font-medium"
                : "text-ink-muted hover:text-ink"
            ]}>
              Articles
            </a>
            <a href={`${base}benchmarks/`} class:list={[
              "font-serif text-sm no-underline hover:no-underline transition-colors",
              currentPath.startsWith('/benchmarks')
                ? "text-ink font-medium"
                : "text-ink-muted hover:text-ink"
            ]}>
              Benchmarks
            </a>
            <a href={`${base}resources/`} class:list={[
              "font-serif text-sm no-underline hover:no-underline transition-colors",
              currentPath.startsWith('/resources')
                ? "text-ink font-medium"
                : "text-ink-muted hover:text-ink"
            ]}>
              Resources
            </a>
            <a href={`${base}about/`} class:list={[
              "font-serif text-sm no-underline hover:no-underline transition-colors",
              currentPath.startsWith('/about')
                ? "text-ink font-medium"
                : "text-ink-muted hover:text-ink"
            ]}>
              About
            </a>
          </nav>

          <!-- Mobile Menu Button -->
          <button
            id="mobile-menu-btn"
            class="md:hidden text-ink-muted hover:text-ink transition-colors"
            aria-label="Open menu"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 6h16M4 12h16M4 18h16"/>
            </svg>
          </button>
        </div>
      </div>
    </header>

    <!-- Mobile Navigation -->
    <nav id="mobile-menu" class="hidden border-b border-newsprint-300 bg-newsprint-50">
      <div class="max-w-6xl mx-auto px-4 py-3 space-y-1">
        <a href={`${base}articles/`} class="block px-3 py-2 font-serif text-sm text-ink-muted hover:text-ink no-underline">Articles</a>
        <a href={`${base}benchmarks/`} class="block px-3 py-2 font-serif text-sm text-ink-muted hover:text-ink no-underline">Benchmarks</a>
        <a href={`${base}resources/`} class="block px-3 py-2 font-serif text-sm text-ink-muted hover:text-ink no-underline">Resources</a>
        <a href={`${base}about/`} class="block px-3 py-2 font-serif text-sm text-ink-muted hover:text-ink no-underline">About</a>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="mt-16">
      <hr class="rule-double max-w-6xl mx-auto px-4" />
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8 text-center">
        <p class="font-serif text-sm text-ink-muted italic">
          Agent Engineering &mdash; by Daniel Huber
        </p>
        <p class="font-serif text-xs text-ink-faint mt-1">
          A practitioner's reference for AI agent architecture and engineering patterns.
        </p>
      </div>
    </footer>

    <script>
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');
      mobileMenuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>

    <!-- Vercel Analytics -->
    <script>
      import { inject } from '@vercel/analytics';
      inject();
    </script>
  </body>
</html>
